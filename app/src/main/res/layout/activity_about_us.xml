<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/head"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/uye"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="About Us"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="270dp"
                android:text="Zulhaqqi Muslim Nasution"
                android:textSize="40dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_below="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:text="1757051007"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/npm1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/haqqi"/>

            <ImageView
                android:id="@+id/mayda1"
                android:layout_below="@+id/npm1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/dd"/>

            <TextView
                android:id="@+id/namamayda"
                android:layout_below="@+id/mayda1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Mayda Brilliani Fauzi"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/npmmayda"
                android:layout_below="@+id/namamayda"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="1717051003"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/gambar"
                android:layout_below="@+id/npmmayda"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/khaernun"/>

            <TextView
                android:id="@+id/khaernun"
                android:layout_below="@+id/gambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Khaernun Anissa Ensri"
                android:textSize="40dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_below="@+id/khaernun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1717051039"
                android:textSize="20dp"
                android:textColor="#000000"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
